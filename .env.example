# .env.example
# Copy to .env and fill in your values.
# NEVER commit .env to version control.

# ── Alpaca broker (REQUIRED) ──────────────────────────────────────────────────
# Get keys from https://app.alpaca.markets → API Keys
APCA_API_KEY_ID=your_alpaca_key_id_here
APCA_API_SECRET_KEY=your_alpaca_secret_key_here

# Base URL — use paper URL for simulation, live URL for real money
# Paper (default): https://paper-api.alpaca.markets
# Live:            https://api.alpaca.markets
# APCA_API_BASE_URL=https://paper-api.alpaca.markets

# ── Risk limits ───────────────────────────────────────────────────────────────
# Maximum allowable daily loss in USD (negative number).
# The bot halts new orders if unrealised + realised PnL falls below this.
DAILY_RISK_LIMIT=-200

# ── Signal sources (all optional) ────────────────────────────────────────────
# Disable/enable signal providers
# ENABLE_QUIVER=true
# ENABLE_YAHOO=true
# ENABLE_FMP=false
# ENABLE_SHORTS=false

# QuiverQuant — required if ENABLE_QUIVER=true
# QUIVER_API_KEY=your_quiver_key_here

# Financial Modeling Prep — required if ENABLE_FMP=true
# FMP_API_KEY=your_fmp_key_here

# ── Dry-run / simulation ─────────────────────────────────────────────────────
# Set to true to log orders without submitting them to Alpaca
# DRY_RUN=false

# ── Caching ──────────────────────────────────────────────────────────────────
# Optional Redis for distributed caching (defaults to in-process cache)
# REDIS_URL=redis://localhost:6379/0

# ── Notifications ────────────────────────────────────────────────────────────
# TELEGRAM_BOT_TOKEN=your_bot_token_here
# TELEGRAM_CHAT_ID=your_chat_id_here

# ── Timing ───────────────────────────────────────────────────────────────────
# Main loop interval in seconds (default 60)
# MONITOR_INTERVAL=60
# TRAILING_WATCHDOG_INTERVAL=60
